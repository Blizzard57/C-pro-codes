#include<stdio.h>
int main()
{
    int w,t,n,v,q,i,l,r,k;
    long long int min,x;

    scanf("%d",&t);
    for(i=0;i<t;i++)
    {
        if(i!=0)
            printf("\n");

        scanf("%d",&n);
        scanf("%d",&q);

        long long int arr[n];
        for(v=0;v<n;v++)
            arr[v]=0;

        for(w=0;w<q;w++)
        {
            scanf("%d",&l);
            scanf("%d",&r);
            scanf("%lld",&x);

            arr[l-1]+=x;
            if(r<n)
                arr[r]-=x;
        }

        for(k=0;k<n;k++)
            arr[k+1] += arr[k];
        
        int f=0;
        min=arr[0];

        for(k=1;k<n;k++)
        {
            if(arr[k]<min)
            {
                min=arr[k];
                f=k;
            }
        }
        printf("%d",f+1);
    }
    return 0;
}
